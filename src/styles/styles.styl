@import 'jeet'
@import 'bootstrap'
@import 'rupture'

edit()

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important
html
  box-sizing border-box
*, *:before, *:after
  box-sizing inherit
button.btn.btn-block.btn-login
    background-color #2b2b2b
    color white
    opacity 1
    i
      margin-right 10px
button.btn.btn-block.btn-facebook
    margin-top -20px
    background-color #3B5998
    color white
    i
      margin-right 10px
button.btn.btn-block.btn-google-plus
    background-color #DD4B39
    color white
    i
      margin-right 10px
h4
  margin-top 15px
  text-align center

body
  padding 15px
.cont
  margin-top 15px
  display flex
  flex-direction column
  max-width 1000px
  margin 0 auto
  #search
    form
      display flex
      justify-content space-around
      width 100%
      +below(625px)
        display block
      input
        width 28%
        margin-right 15px
        +below(625px)
          width 100%
      label
        position absolute
        transform translate(12px, 7px)
      #location
        padding-left 52px
      button
        display block
        width 70px
        +below(625px)
          margin 0 auto
  #nav
    padding-top 15px
    display flex
    justify-content center
    ul
      padding 0
      list-style-type none
      img
        height 50px
        transform rotate(90deg)
      li
        display inline-block
        &:not(:first-child)
          padding-left 25px
